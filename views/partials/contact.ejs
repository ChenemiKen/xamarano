<section class="contact-section container" id="contact-section">
    <h6>Contact</h6><hr>
    <h2 class=".black"><b>CONTACT <span class="yellow-dark">US</span></b></h2>
    <% if(typeof errors !== 'undefined'){ %> 
        <% errors.forEach(function(error){%>
            <p><%= error.text %></p>
        <%})%>
    <% } %>
    
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <a class="col-sm-2 href=""><img class="icon-bg" src="images/email.png" alt=""></a>
                <div class="col-sm-8 d-inline">
                    <h4 >Email</h4>
                    <p>info@xamaranoict.com</p>
                </div>
            </div>
            <div class="row">
                <a class="col-sm-2" href=""><img class="icon-bg" src="images/phone.png" alt=""></a>
                <div class="col-sm-8 d-inline">
                    <h4>Call</h4>
                    <p>+2345678901011</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h4>Send us a Direct message:</h4>
            <form action="/contact" method="POST" class="contactform">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" name="name" placeholder=" Your Name" <% if(typeof contact_data != 'undefined'){ %> value=<%= contact_data.name %> <% } %>>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="email" class="form-control" name="email" placeholder="Your Email" <% if(typeof contact_data != 'undefined'){ %> value=<%= contact_data.email %> <% } %>>
                    </div>
                    </div>
                    <div class="form-group">
                    <input type="text" class="form-control" name="subject" placeholder="Subject" <% if(typeof contact_data != 'undefined'){ %> value=<%= contact_data.subject %> <% } %>>
                    </div>
                    <div class="form-group">
                    <textarea class="form-control" name="message" rows="5" placeholder="Message"> <% if(typeof contact_data != 'undefined'){ %><%= contact_data.message %> <% } %> </textarea>
                </div>
                <button type="submit" class="btn btn-warning">Send Message</button>
            </form>
        </div>
    </div>
</section>
